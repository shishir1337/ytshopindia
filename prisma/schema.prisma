generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("admins")
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String    @db.Text
  image       String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([published, publishedAt])
  @@map("blog_posts")
}

// Better Auth Models

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?
  orders     Order[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?   @db.Text
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
  @@index([identifier])
}

model RateLimit {
  id          String   @id @default(cuid())
  key         String   @unique
  count       Int      @default(1)
  lastRequest BigInt

  @@map("rate_limit")
}

model ChannelListing {
  id              String    @id @default(cuid())
  title           String
  description     String?   @db.Text
  channelLink     String?
  
  // Seller Information
  sellerName      String
  sellerEmail     String
  sellerWhatsapp  String
  expectedPrice   String?
  currency        String    @default("₹")
  
  // Images
  featuredImage   String?
  images          String[]  @default([])
  
  // Additional Details
  startDate       DateTime?
  category        String?
  revenueSources  String?
  monthlyRevenue  String?
  
  // Summary/Details
  status          String    @default("pending") // pending, approved, sold, rejected
  listingId       String?   @unique
  subscribers     String?
  creationDate    DateTime?
  language        String?
  videoCount      String?
  channelType     String?
  contentType     String?
  viewsLast28Days String?
  lifetimeViews   String?
  copyrightStrike String?   @default("None")
  communityStrike String?   @default("None")
  monetized       Boolean?  @default(false)
  shortsViews90Days String?
  revenueLast28Days String?
  lifetimeRevenue String?
  
  // Admin fields
  approvedAt      DateTime?
  approvedBy      String?
  notes           String?   @db.Text
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  orders          Order[]

  @@index([status])
  @@index([listingId])
  @@index([createdAt])
  @@map("channel_listings")
}

model Order {
  id                String          @id @default(cuid())
  
  // Order Details
  channelListingId  String
  channelListing    ChannelListing  @relation(fields: [channelListingId], references: [id], onDelete: Restrict)
  
  // User Information (either userId or guestEmail)
  userId            String?
  user              User?           @relation(fields: [userId], references: [id], onDelete: SetNull)
  guestEmail        String?
  guestName         String?
  
  // Pricing
  originalPrice     String          // Original price in listing currency
  originalCurrency  String          @default("₹")
  amount            String          // Amount in USD for Cryptomus
  currency          String          @default("USD")
  exchangeRate      Float?          // Exchange rate used for conversion
  
  // Cryptomus Payment Details
  cryptomusInvoiceId String?        @unique
  cryptomusOrderId   String?        @unique
  cryptomusPaymentUrl String?       @db.Text
  cryptomusQrCode     String?       @db.Text
  paymentNetwork      String?       // e.g., "TRC20", "BSC", "ETH"
  paymentAddress      String?       // Crypto wallet address
  paymentAmount       String?       // Amount in crypto
  
  // Order Status
  status            String          @default("pending") // pending, paid, delivered, completed, cancelled, expired
  paymentStatus     String?         // paid, pending, expired, cancelled
  
  // Delivery Information
  deliveredAt       DateTime?
  deliveredBy       String?        // Admin user ID
  deliveryDetails   String?        @db.Text // Access details, credentials, etc.
  deliveryNotes     String?        @db.Text
  channelAccessEmail String?       // Email designated for channel access assignment
  
  // Timestamps
  paidAt            DateTime?
  expiresAt         DateTime?      // Payment expiration time
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([userId])
  @@index([channelListingId])
  @@index([status])
  @@index([cryptomusInvoiceId])
  @@index([cryptomusOrderId])
  @@index([createdAt])
  @@map("orders")
}

model SiteSetting {
  id             String   @id @default("singleton")
  adminWhatsapp  String   @default("+919101782780")
  siteTitle      String   @default("YT Shop India")
  siteDescription String?  @default("Premier marketplace for buying and selling YouTube channels")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("site_settings")
}

model AnalyticsVideo {
  id        String   @id @default(cuid())
  videoId   String   // YouTube Video ID
  title     String
  thumbnail String?  // Optional override
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("analytics_videos")
}
